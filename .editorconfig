# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_size = 4
indent_style = space
trim_trailing_whitespace = true
max_line_length = 120

[*.js]
max_line_length = 80

[*.less]
indent_size = 2

[composer.json]
indent_size = 4
